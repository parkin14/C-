#include <stdio.h>
int main()
{
	int n,num;
	printf("n입력: ");
	scanf("%d",&n);
	num=0;
	printf("%d",n);
	while(1)
	{
		if(n%2==0)
		{
			n=n/2;
			num++;
			printf(" → %d",n);
		}
		else
		{
			n=(n+1)/2;
			num++;
			printf(" → %d",n);
		}
		if(n==1)
		{
			break;
		}
	}
	printf("\n반복횟수: %d",num);
}
